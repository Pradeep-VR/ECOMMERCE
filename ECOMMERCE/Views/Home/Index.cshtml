@{
    ViewData["Title"] = "Home Page";
}

<style>

    .main-Container {
        min-width: 200px;
        max-width: 300px;
    }

    .image-container {
        position: relative;
        height: 200px;
        background-color: #e0e0e0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .image {
        display: block;
        max-width: 100%;
        max-height: 100%;
    }

    .info {
        padding: 16px;
    }

    .name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .details {
        display: flex;
        justify-content: space-between;
    }

        .details div {
            font-size: 14px;
            color: #555;
        }
</style>

<div id="homeDiv">
    <div id="categoryDiv">
        <button class="btn btn-outline-dark" value="option" onclick="btnClick(Event)">Option</button>
    </div>
    <hr />
    <div id="productsDiv" class="container-md" style="background-color:seashell; display:inline-flex; flex-wrap:wrap ">

